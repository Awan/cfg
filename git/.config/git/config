	username = Abdullah
[push]
  default = current
[commit]
	gpgSign = true
[tag]
	forceSignAnnotated = true
[protocol "keybase"]
	allow = always
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[color]
	ui = always
[diff]
	colorMoved = dimmed_zebra
	tool = vimdiff
	submodule = log
[difftool]

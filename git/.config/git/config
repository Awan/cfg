[gpg]
	program = gpg
[core]
	autocrlf = false
	safecrlf = true
	editor = vim
    #pager = vimpager
	symlinks = true
	excludesfile = ~/.config/git/ignore
[alias]
	last = log -1 HEAD
  bD = branch -D  # delete branch
  bm = branch -m # rename current branch to $name
	co = checkout
  cob = checkout -b
  cp = cherry-pick
  cc = cherry-pick --continue
	cm = checkout master
	b = branch
	lg = log --pretty=oneline --abbrev-commit
[credential]
	helper = cache
[help]

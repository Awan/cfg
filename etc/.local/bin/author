#!/usr/bin/env bash


new_script_name="$1"

author() {
  echo "
coded_by='

In the name of Allah, the most Gracious, the most Merciful.

 ▓▓▓▓▓▓▓▓▓▓
░▓ Author ▓ Abdullah <https://abdullah.today>
░▓▓▓▓▓▓▓▓▓▓
░░░░░░░░░░

'
"
}

author_with_script_name() {
  echo "
coded_by='

In the name of Allah, the most Gracious, the most Merciful.

 ▓▓▓▓▓▓▓▓▓▓
░▓ Author ▓ Abdullah <https://abdullah.today>
░▓▓▓▓▓▓▓▓▓▓
░░░░░░░░░░

$(toilet -f pagga ${new_script_name})
'
"
}

if [[ -z $new_script_name ]]; then
  author
else
  author_with_script_name
fi

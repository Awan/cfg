# A simple bash script to set wallpaper.


wall () {
  echo "#!/bin/sh
  feh --bg-scale $(shuf -n1 -e ~/pix/wall/collection/*)" > ~/.fehbg
  ~/.fehbg
}

while true; do
  wall
  sleep 300
done

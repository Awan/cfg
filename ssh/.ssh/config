Host *
    ForwardAgent yes
    ControlPath ~/.ssh/%r@%h:%p
    ControlMaster auto
    ControlPersist 30m
    ServerAliveInterval 60
    ServerAliveCountMax 10
    TCPKeepAlive    no
    HostKeyAlgorithms ssh-ed25519,ecdsa-sha2-nistp256,ssh-rsa
    AddKeysToAgent yes

Host aur.archlinux.org
    User aur
